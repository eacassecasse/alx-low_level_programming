#include "main.h"
#include <stdlib.h>
#include <stddef.h>

/**
 * _strdup - Custom function
 * @str: string to duplicate
 *
 * Description: Duplicates a string
 * Return: A pointer to new allocated memory
 */

char *_strdup(char *str)
{
	char *duplicate;
	int i = 0;

	if (str == NULL)
		return (NULL);

	while (str[i])
		i++;

	duplicate = malloc(sizeof(char) * (i + 1));

	if (duplicate == NULL)
		return (NULL);

	while ((duplicate[i] = str[i]) != '\0')
		i++;

	return (duplicate);
}
